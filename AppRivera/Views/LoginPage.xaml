<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRivera.Views.LoginPage">

    

    <VerticalStackLayout Padding="20" Spacing="20" >

        <!-- Logo -->
            <Image Source="logord.png"
                   HeightRequest="80"
                   HorizontalOptions="Center" />

            <!-- Correo -->
            <Frame CornerRadius="10" Padding="10" BackgroundColor="#F5F5F5" HasShadow="False" BorderColor="#DDDDDD">
                <Entry Text="{Binding Correo}"
                          x:Name="txtCorreo"
                       Placeholder="Correo electrónico"
                       Keyboard="Email"
                       BackgroundColor="Transparent"
                       TextColor="Black"
                       PlaceholderColor="Gray" />
            </Frame>

            <!-- Contraseña -->
            <Frame CornerRadius="10" Padding="10" BackgroundColor="#F5F5F5" HasShadow="False" BorderColor="#DDDDDD">
                <Entry Text="{Binding Clave}"
                          x:Name="txtClave"
                       Placeholder="Contraseña"
                       IsPassword="True"
                       BackgroundColor="Transparent"
                       TextColor="Black"
                       PlaceholderColor="Gray" />
            </Frame>

            <!-- Botón Login -->
                    <!--"-->
            <Button Text="Iniciar sesión" 
                    Command="{Binding LoginCommand}"
                    x:Name="btnIniciar"
                    BackgroundColor="#D32F2F"
                    TextColor="White"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="10" />


            <!-- Botón para registro -->
            <!--<Button Text="Regístrate"
                    Command="{Binding RegisterCommand}"
                    BackgroundColor="Transparent"
                    TextColor="#D32F2F"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="5" />-->

        </VerticalStackLayout>


</ContentPage>
